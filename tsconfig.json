{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@config/*": ["./config/*"],
    }
  },
  "include": [
    "main-server.ts",
    "buildAll.ts",
    "installAll.ts",
    "config/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist"
  ]
}