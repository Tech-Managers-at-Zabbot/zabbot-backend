{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification microservice for sending emails via Mailchimp",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p .",
    "buildWatch": "tsc -w",
    "start": "node dist/src/app.js",
    "dev": "nodemon src/app.ts",
    "dev2": "ts-node-dev --respawn --transpile-only src/app.ts",
    "compile": "tsc -w",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@mailchimp/mailchimp_transactional": "^1.0.59",
    "@sendgrid/client": "^8.1.5",
    "@types/nodemailer": "^6.4.17",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "mailchimp_transactional": "^0.0.1-security",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/mailchimp__mailchimp_marketing": "^3.0.21",
    "@types/mailchimp__mailchimp_transactional": "^1.0.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
